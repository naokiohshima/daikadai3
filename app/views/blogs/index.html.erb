<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>TOPIC一覧</h1>
    <%= link_to "TOPICを作成する", new_blog_path, class: 'btn btn-default' %>
    <% @blogs.each do |blog| %>
    <div class="row">
      <%= link_to blog_path(blog) do %>
       <h4><strong><%= blog.title %></strong></h4>
      <% end %>
      <p><%= blog.content %></p>
      <%= profile_img(blog.user) %>
      <%= blog.user.name %>
      <% if current_user.id == blog.user_id %>
      <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-sm btn-success' %>
      <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-sm btn-danger' %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
